<Window x:Class="MediaPlayer.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayer"
        mc:Ignorable="d"
        Title="InputBox" Height="150" Width="400">
    <Grid>
        <Label x:Name="lblQuestion" Content="Enter name of playlist: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAnswer" HorizontalAlignment="Left" Height="36" Margin="10,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="360" FontSize="16"/>
        <Button x:Name="btnDialogOk" Content="OK" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="btnDialogOk_Click"/>
    </Grid>
</Window>
